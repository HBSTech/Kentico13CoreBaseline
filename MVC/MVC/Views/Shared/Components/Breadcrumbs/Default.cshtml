@model IEnumerable<Breadcrumb>

@if (Model.Count() > 0)
{
    <ol class="breadcrumb">
        @foreach (var Breadcrumb in Model)
        {
            if (!Breadcrumb.IsCurrentPage)
            {
                <li><a href="@Breadcrumb.LinkUrl">@Breadcrumb.LinkText</a></li>
            }
            else
            {
                <li>@Breadcrumb.LinkText</li>
            }
        }
    </ol>
}

