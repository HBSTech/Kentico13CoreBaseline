@model Generic.Components.Widgets.ShareableContentWidget.ShareableContentWidgetComponentViewModel
<vc:configuration-helper visible=@(Model.DocumentID <= 0) mode="Inline" instructions="Please select a Shareable Content Page in the widget dialog" needs-attention="false" />
@if (Model.DocumentID > 0)
{
    <inlinewidgetpage documentid="Model.DocumentID">
        <containered container-model="Model.WidgetProperties">
            <vc:shareable-content />
        </containered>
    </inlinewidgetpage>
}
    
